@page
@model webdemo.Pages.TableModel
@{
    Layout = null;
}

@if (Model.Number > 0)
{
    <h2>Table for @Model.Number</h2>

    <table border="1" cellpadding="5pt">
        @for (var i = 1; i <= 10; i++)
        {
            <tr>
                <td style="text-align:right">@Model.Number</td>
                <td style="text-align:right">@i</td>
                <td style="text-align:right">@(Model.Number * i)</td>
            </tr>
        }
    </table>
}
else
{
    <h3>Sorry! Number is missing!</h3>
}